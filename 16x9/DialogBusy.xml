<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- busydialog -->

	<controls>

		<!-- Background -->
		<include>DialogFadeBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>DialogZoomAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>680</width>
			<height>220</height>

			<!-- Background -->
			<control type="image">
				<centerleft>50%</centerleft>
				<width>680</width>
				<height>220</height>
				<texture colordiffuse="$VAR[OverlayColor]">dialogs/Background.png</texture>
			</control>

			<!-- Spinner -->
			<control type="image">
				<right>50</right>
				<centertop>50%</centertop>
				<width>64</width>
				<height>64</height>
				<texture colordiffuse="DialogColor1">busy.gif</texture>
			</control>

			<!-- Heading -->
			<control type="label">
				<left>50</left>
				<top>60</top>
				<width>520</width>
				<height>48</height>
				<align>center</align>
				<font>Font48</font>
				<textcolor>DialogColor1</textcolor>
				<label>503</label>
			</control>

			<!-- Details -->
			<control type="label">
				<left>50</left>
				<top>116</top>
				<width>520</width>
				<height>42</height>
				<align>center</align>
				<font>Font42</font>
				<textcolor>DialogColor2</textcolor>
				<label>20186</label>
			</control>



		</control>

	</controls>

</window>